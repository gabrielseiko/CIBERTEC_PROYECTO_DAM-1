<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PantallaMenu">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_menu_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bienvenido!"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:textSize="24dp"
                    android:textColor="@color/negroapp"
                    android:textStyle="bold"
                    >
                </TextView>

                <TextView
                    android:id="@+id/menuUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="usuario" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/listarLibros"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:background="@color/negroapp"
            android:gravity="center"
            android:text="Libros"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/agregarLibro"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/verdeapp"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:text="Agregar Libro +" />
    </LinearLayout>

    <Button
        android:id="@+id/cerrarSesion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/amarilloapp"
        android:textColor="@color/negroapp"
        android:text="Cerrar Sesion" />


</LinearLayout>